<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
	xmlns:gap   = "http://phonegap.com/ns/1.0"
	id          = "com.charliefortune.katokuri"
	versionCode = "4" 
	version     = "0.1.4" >

    <!-- versionCode is optional and Android only -->

    <name>Katokuri</name>

    <description>
	A phonegap project, send gifts to contacts.
    </description>

    <author href="http://charliefortune.com" email="ruari@charliefortune.com">
	Charlie Fortune
    </author>
      
    <icon src="img/android/ic_launcher_icon/drawable-ldpi/ic_launcher_icon.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="img/android/ic_launcher_icon/drawable-mdpi/ic_launcher_icon.png" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="img/android/ic_launcher_icon/drawable-hdpi/ic_launcher_icon.png" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="img/android/ic_launcher_icon/drawable-xhdpi/ic_launcher_icon.png" gap:platform="android" gap:qualifier="xhdpi" />
      
    <gap:plugin name="org.apache.cordova.contacts" version="0.2.9" />
    <gap:plugin name="de.appplant.cordova.plugin.local-notification" version="0.7.0" />
    
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>

</widget>
